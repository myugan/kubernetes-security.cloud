---
import { getMitreTechnique, getAllMitreTechniques } from '../data/mitre-attack';
import MitreTechnique from './MitreTechnique.astro';

interface Props {
  techniqueIds: string[];
  showDescription?: boolean;
  title?: string;
}

const { techniqueIds, showDescription = false, title = 'MITRE ATT&CK Techniques' } = Astro.props;
const techniques = techniqueIds
  .map(id => getMitreTechnique(id))
  .filter((tech): tech is NonNullable<typeof tech> => tech !== undefined);
---

{techniques.length > 0 && (
  <div>
    <h3 class="text-lg font-semibold text-gray-900 mb-3 flex items-center gap-2">
      <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
      </svg>
      {title}
    </h3>
    <div class="flex flex-wrap gap-2">
      {techniques.map(technique => (
        <MitreTechnique techniqueId={technique.id} showDescription={showDescription} />
      ))}
    </div>
    {showDescription && (
      <div class="mt-4 space-y-2">
        {techniques.map(technique => (
          <div class="text-sm text-gray-600">
            <span class="font-mono font-semibold text-gray-900">{technique.id}:</span> {technique.description}
          </div>
        ))}
      </div>
    )}
  </div>
)}
