---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - Page Not Found">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-24 text-center">
    <h1 class="text-6xl md:text-7xl font-bold text-gray-900 mb-4">404</h1>
    <p class="text-xl text-gray-600 mb-8">
      Page not found
    </p>
    <a 
      href="/glossary" 
      class="inline-flex items-center justify-center px-6 py-3 rounded-lg text-base font-medium text-white bg-primary-600 hover:bg-primary-700 transition-colors"
    >
      Go to Glossary
    </a>
  </div>
</BaseLayout>
